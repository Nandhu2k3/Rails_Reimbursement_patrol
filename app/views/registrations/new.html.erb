<div class="form-page">
  <div class="card">
    <h1 class="form-card-title">Sign Up</h1>

    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with model: @user, url: signup_path, local: true do |f| %>
      <div class="form-field">
        <%= f.label :name, "Full Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :email, "Work Email", class: "form-label" %>
        <%= f.email_field :email, class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, class: "form-input" %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= f.submit "Create Account", class: "btn-primary" %>
      </div>
    <% end %>

    <p style="margin-top: 14px; font-size: 13px;">
      Already have an account?
      <%= link_to "Login", login_path, class: "form-link" %>
    </p>
  </div>
</div>