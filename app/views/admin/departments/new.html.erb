<h1>New Department</h1>

<% if flash[:alert] %>
  <p style="color:red;"><%= flash[:alert] %></p>
<% end %>

<%= form_with model: @department, url: admin_departments_path, local: true do |f| %>
  <div>
    <%= f.label :name, "Department Name" %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.submit "Create Department" %>
  </div>
<% end %>

<p>
  <%= link_to "Back", admin_departments_path %>
</p>