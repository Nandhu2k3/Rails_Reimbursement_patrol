<h1>New Employee</h1>

<div class="card" style="max-width: 640px;">
  <% if flash[:alert] %>
    <div class="flash flash-alert"><%= flash[:alert] %></div>
  <% end %>

  <%= form_with model: @employee, url: admin_employees_path, local: true do |f| %>
    <div class="form-field">
      <%= f.label :first_name, "First Name", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= f.label :last_name, "Last Name", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= f.label :email, "Work Email", class: "form-label" %>
      <%= f.email_field :email, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= f.label :designation, "Designation", class: "form-label" %>
      <%= f.text_field :designation, class: "form-input" %>
    </div>

    <div class="form-field">
      <%= f.label :department_id, "Department", class: "form-label" %>
      <%= f.select :department_id,
                   @departments.map { |d| [d.name, d.id] },
                   { prompt: "Select department" },
                   class: "form-input" %>
    </div>

    <div class="form-field">
      <%= f.label :user_id, "Linked User ID (optional)", class: "form-label" %>
      <%= f.number_field :user_id, class: "form-input" %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create Employee", class: "btn-primary" %>
      <%= link_to "Back to Employees",
                  admin_employees_path,
                  class: "form-link",
                  style: "margin-left: 10px;" %>
    </div>
  <% end %>
</div>