<div class="form-page">
  <div class="card">
    <h1 class="form-card-title">Login</h1>

    <% if flash[:alert] %>
      <div class="flash flash-alert"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with url: login_path, method: :post, local: true do %>
      <div class="form-field">
        <label class="form-label" for="email">Email</label>
        <%= text_field_tag :email, params[:email], class: "form-input" %>
      </div>

      <div class="form-field">
        <label class="form-label" for="password">Password</label>
        <%= password_field_tag :password, nil, class: "form-input" %>
      </div>

      <div class="form-actions">
        <%= submit_tag "Login", class: "btn-primary" %>
      </div>
    <% end %>

    <p style="margin-top: 14px; font-size: 13px;">
      Don't have an account?
      <%= link_to "Sign up", signup_path, class: "form-link" %>
    </p>
  </div>
</div>